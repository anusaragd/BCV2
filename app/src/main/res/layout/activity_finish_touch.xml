    <TextView
        android:text="เสร็จสิ้นการสอนคลำเต้านมด้วยตนเองแล้ว"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="14dp"
        android:id="@+id/textView10"
        android:textSize="16sp" />

    <TextView
        android:text="มั่นตรวจสม่ำเสมอเดือนละครั้งนะคะ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:id="@+id/textView14"
        android:textSize="16sp" />

    <TextView
        android:text="คุณสามารถคลำเต้านมด้วยตนเองได้เลย เริ่มจากการคลำวนเป็นก้นหอยรอบๆบริเวณยอดอกของคุณก่อนแล้วค่อยๆคำออกแล้วก็กดมือเป็นก้นหอยวนเป็นรู้ก้นหอยไปเรื่อยๆ จนรอบบริเวณอก อย่าลืมสังเกตุด้วยว่าตอนคลำไปนั้นมีบริเวณไหนเจ็บ หรือมีก้อนแข็งด้วยหรือเปล่า "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:textSize="16sp" />

    <Button
        android:text="ถัดไป"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginBottom="38dp"
        android:id="@+id/button2" />
</RelativeLayout>
