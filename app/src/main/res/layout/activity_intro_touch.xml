<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_intro_touch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anusara.bcv2.Touch.IntroTouchActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/qwee"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView3" />

    <TextView
        android:text="วันนี้เรามาลองตรวจเต้านมกันเถอ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_marginStart="25dp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_marginBottom="47dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/threefingers"
        android:id="@+id/imageView6"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="ก่อนอื่น ชูนิ้วขึ้นมา 3 นิ้ว แบบนี้"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/imageView6"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="จากนั้นลองวนมือเป็นรูปก้นหอย"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/thumb"
        android:id="@+id/imageView7"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:text="ลองทำมือมุมตามรูปข้างบนค่ะ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView7"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView9" />

    <Button
        android:text="ถัดไป"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView9"
        android:id="@+id/button3" />


</RelativeLayout>
