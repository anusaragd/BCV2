<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_intro_touch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anusara.bcv2.Touch.IntroTouchActivity">

    <Button
        android:text="ถัดไป"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="32dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/tyutt"
        android:id="@+id/imageView7"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="ลองทำมือมุมตามรูปข้างบนค่ะ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textSize="20sp"
        android:layout_below="@+id/imageView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:text="จากนั้นลองวนมือเป็นรูปก้นหอย"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="20sp"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:text="ก่อนอื่น ชูนิ้วขึ้นมา 3 นิ้ว แบบนี้"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/smallll"
        android:id="@+id/imageView3"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="ก่อนจะถึงท่าที่ต้องใช้มือคลำเต้านมเรามาลองทดสอบกันก่อน"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/treefin"
        android:id="@+id/imageView6"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView6"
        android:layout_alignEnd="@+id/button3"
        android:layout_marginEnd="18dp" />


</RelativeLayout>
